<html>
	<head>
	<link rel="stylesheet" href="/apps/mailarchiveserver/styles.css"/>
	<title>
	<%= currentNode.name %>
	</title>
	</head>

	<body>

		<h1> <%= currentNode.name %> </h1>
		
		<%
		var childNodes = currentNode.getChildren()
		for(i in childNodes) {
			var child = childNodes[i]
		%>
		<div>
			<a class="nolinkstyle" href=<% 
					out.print("\"")			
					out.print(currentNode.getPath())			
					out.print("/")			
					out.print(child["Message-ID"].replace(/[\s\.-]/g, "_").replace(/\W/g, ""))
					out.print(".html")
					out.print("\"")
			%>>
		
			<div class="message"> 
				<b>
				<span>	
				From 
				<% 
					var from = child.From
					out.print(from.match(/\w+ \w+/))
				%> 
				</span>
				<span>
				<%
					var d = new Date(child.Date)
					var now = Date.now()
					if (now - d.value < 79200000) {
						out.print(" at ")
						out.print(d.getHours()+":"+d.getMinutes())
					} else {
						out.print(" on ")
						var m_names = new Array("Jan", "Feb", "Mar", 
							"Apr", "May", "Jun", "Jul", "Aug", "Sep", 
							"Oct", "Nov", "Dec")
						out.print(m_names[d.getMonth()]+" "+d.getDay())
					}
				%>
				</span>
				</b>

				<br/>
				<%= child.Subject %> 
			</div>
		
			</a>
		</div>
	
		<%}%>
	</body>
</html>
